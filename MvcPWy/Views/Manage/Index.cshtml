@model MvcPWy.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>External Logins:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Manage", "ManageLogins") ]
        </dd>

        <dt>First Name:</dt>
        <dd>
            @(Model.FirstName ?? "None") [
            @if (Model.FirstName != null)
            {
                @Html.ActionLink("Change", "ChangeFirstLastName")
                @*@: &nbsp;|&nbsp;
                    @Html.ActionLink("Remove", "RemovePhoneNumber")*@
            }
            else
            {
                @Html.ActionLink("Add", "ChangeFirstLastName")
            }
            ]
        </dd>

        <dt>Last Name:</dt>
        <dd>
            @(Model.LastName ?? "None") [
            @if (Model.LastName != null)
            {
                @Html.ActionLink("Change", "ChangeFirstLastName")
                @*@: &nbsp;|&nbsp;*@
                @*@Html.ActionLink("Remove", "RemovePhoneNumber")*@
            }
            else
            {
                @Html.ActionLink("Add", "ChangeFirstLastName")
            }
            ]
        </dd>

        <dt>Phone Number:</dt>
        <dd>
            @(Model.PhoneNumber ?? "None") [
            @if (Model.PhoneNumber != null)
            {
                @Html.ActionLink("Change", "AddPhoneNumber")
                @: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemovePhoneNumber")
            }
            else
            {
                @Html.ActionLink("Add", "RemovePhoneNumber")
            }
            ]
        </dd>

        <dt>Gender:</dt>
        <dd>
            @Html.EnumDropDownListFor(m => m.Gender, new { @disabled = "disabled" })
            [
                @Html.ActionLink("Change", "ChangeGender")
            ]
        </dd>

        <dt>Social Media\Linkedin:</dt>
        <dd>
            @(Model.SocialMedia ?? "None") [
            @if (Model.SocialMedia != null)
            {
                @Html.ActionLink("Change", "ChangeSocialMedia")
                @*@: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemoveSocialMedia")*@
            }
            else
            {
                @Html.ActionLink("Add", "AddSocialMedia")
            }
            ]
        </dd>

        <dt>Company Name:</dt>
        <dd>
            @(Model.CompanyName  ?? "None") 
            [
            @if (Model.CompanyName != null)
            {
                @Html.ActionLink("Change", "ChangeCompanyNameAndSize")
                @*@: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemoveCompanySize")*@
            }
            else
            {
                @Html.ActionLink("Add", "ChangeCompanyNameAndSize")
            }
            ]
        </dd>

        <dt>Company Size:</dt>
        <dd>
            @(Model.CompanySize)
            [
            @if (Model.CompanySize > 0)
            {
                @Html.ActionLink("Change", "ChangeCompanyNameAndSize")
                @*@: &nbsp;|&nbsp;
            @Html.ActionLink("Remove", "RemoveCompanySize")*@
            }
            else
            {
                @Html.ActionLink("Add", "ChangeCompanyNameAndSize")
            }
            ]
        </dd>

        <dt>Country Name:</dt>
        <dd>
            @Html.EnumDropDownListFor(m => m.Country, new { @disabled = "disabled"  })
            [
                @Html.ActionLink("Change", "ChangeCountryName")           
            ]
        </dd>

        <dt>State Name:</dt>
        <dd>
            @(Model.StateName ?? "None") [
            @if (Model.StateName != null)
            {
                @Html.ActionLink("Change", "AddStateName")
                @: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemoveStateName")
            }
            else
            {
                @Html.ActionLink("Add", "RemoveStateName")
            }
            ]
        </dd>

        <dt>City Name:</dt>
        <dd>
            @(Model.CityName ?? "None") [
            @if (Model.CityName != null)
            {
                @Html.ActionLink("Change", "AddCityName")
                @: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemoveCityName")
            }
            else
            {
                @Html.ActionLink("Add", "RemoveCityName")
            }
            ]
        </dd>

        <dt>Job Title:</dt>
        <dd>
            @(Model.JobTitle ?? "None") [
            @if (Model.JobTitle != null)
            {
                @Html.ActionLink("Change", "AddJobTitle")
                @: &nbsp;|&nbsp;
                @Html.ActionLink("Remove", "RemoveJobTitle")
            }
            else
            {
                @Html.ActionLink("Add", "RemoveJobTitle")
            }
            ]
        </dd>

        <dt>Ethnicity:</dt>
        <dd>
            @Html.EnumDropDownListFor(m => m.Ethnicity, new { @disabled = "disabled" })
            [
            @Html.ActionLink("Change", "ChangeEthnicity")            
            ]
        </dd>

        <dt>Two-Factor Authentication:</dt>
        <dd>
            @if (Model.TwoFactor)
            {
                using (Html.BeginForm("DisableTwoFactorAuthentication", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <text>Enabled
                        <input type="submit" value="Disable" class="btn btn-link" />
                    </text>
                }
            }
            else
            {
                using (Html.BeginForm("EnableTwoFactorAuthentication", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <text>Disabled
                        <input type="submit" value="Enable" class="btn btn-link" />
                    </text>
                }
            }
        </dd>

    </dl>
</div>

<style>

    .body-content {
        padding-left: 650px;
        padding-right: 15px;
        padding-top: 150px;
    }
</style>
