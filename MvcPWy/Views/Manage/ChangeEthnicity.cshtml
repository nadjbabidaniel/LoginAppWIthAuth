@model MvcPWy.Models.ChangeGenderEthnicityViewModel
@{
    ViewBag.Title = "Change Ethnicity";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("ChangeEthnicity", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Change Gender Form</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Ethnicity, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.EnumDropDownListFor(m => m.Ethnicity, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Change Ethnicity" class="btn btn-default" />
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>

    .body-content {
        padding-left: 650px;
        padding-right: 15px;
        padding-top: 150px;
    }
</style>